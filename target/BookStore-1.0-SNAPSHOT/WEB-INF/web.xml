<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>NumberPageController</servlet-name>
        <servlet-class>controller.NumberPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformationProductController</servlet-name>
        <servlet-class>controller.InformationProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookCategoryController</servlet-name>
        <servlet-class>controller.BookCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchPriceController</servlet-name>
        <servlet-class>controller.SearchPriceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchNameController</servlet-name>
        <servlet-class>controller.SearchNameController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchSupplierController</servlet-name>
        <servlet-class>controller.SearchSupplierController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchPriceSaleController</servlet-name>
        <servlet-class>controller.SearchPriceSaleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>controller.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>controller.OrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NumberPageController</servlet-name>
        <url-pattern>/NumberPageController.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformationProductController</servlet-name>
        <url-pattern>/InformationProductController.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookCategoryController</servlet-name>
        <url-pattern>/BookCategoryController.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchPriceController</servlet-name>
        <url-pattern>/SearchPriceController.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchNameController</servlet-name>
        <url-pattern>/SearchNameController.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchSupplierController</servlet-name>
        <url-pattern>/SearchSupplierController.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchPriceSaleController</servlet-name>
        <url-pattern>/SearchPriceSaleController.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/CartController.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/OrderController.html</url-pattern>
    </servlet-mapping>

</web-app>